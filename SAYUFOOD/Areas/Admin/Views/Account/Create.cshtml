@model SAYUFOOD.Models.CreateAcountViewModel

@{
    ViewBag.Title = "Tạo tài khoản mới";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Tạo tài khoản mới</h1><br />
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Account</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Tạo tài khoản mới</h3>

        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
            <form>
                <div class="form-group">
                    <label>Tài khoản</label>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label>Họ tên</label>
                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label>Số điện thoại</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label>Quyền</label>
                    @Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList, "-Chọn quyền cho tài khoản", new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label>Mật khẩu</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label>Nhập lại mật khẩu</label>
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Tạo</button>
                    <a href="~/Admin/Account/Index" class="btn btn-danger">Quay Lại</a>
                </div>
            </form>
            }
        </div>
    </div>
</section>
